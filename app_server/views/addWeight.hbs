<form id="dodajOglas" action="" method="post" role="form">
    <div class="container">
        <div class="container">
            <div class="collection_text">Add weight</div>
        </div>
        <div class="container bg-light2 flex-wrapper">
            <div class="container">
                <div class="racing_shoes">
                    <div class="form-group">
                        <p style="text-align:center;font-weight: bold;color:black">Input weight in Kg</p>
                        <input  style="padding: 10px; margin: 0px auto; width: 400px;" id="naslov" type="text" class="form-control" name="naslov" required>
                    </div>
                    <div class="form-group" style="text-align:center">
                        <button style="align-items: center"class="btn btn-primary" id="uredi">Confirm</button>
                        <button onclick="window.location='domacaStran'" type="button" id="izbrisi" class="btn btn-light">Cancel</button>
                    </div>
                    <table class="table table-hover table-bordered table-striped">
                        {{#each weight as |weight2|}}
                            <tr>
                                <td>{{weight2.weight}}</td>
                                <td>{{weight2.date}}</td>
                            </tr>
                        {{/each}}
                    </table>
                    <div id="chartContainer" style="height: 300px; width: 100%; background-color: #EBEBEB"></div>

                </div>
            </div>
        </div>


    </div>
</form>
<script>
    window.onload = function () {
        var chart = new CanvasJS.Chart("chartContainer", {
            theme: "dark",
            title:{
                text: "Weight history chart"
            },
            data: [{
                labels:[{{#each weight as |weight2|}}
                    "{{@index}}",
                {{/each}}],
                type: "line",
                axisXIndex:1,
                dataPoints: [
                    {{#each weight as |weight2|}}
                            {
                            y:{{weight2.weight}} },
                    {{/each}}
                ]
            }]
        });
        chart.render();
    }
</script>
<script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>

