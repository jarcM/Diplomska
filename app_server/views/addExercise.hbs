<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />

<div id="contact" class="contact-area section-padding">
    <div class="container">
        <div class="section-title text-center">
            <h1>Add exercise</h1>
            <p>Enter exercise name and main body part to add exercise to database.</p>
        </div>
        <div class="row">
            <div class="col-lg-17" style="margin: auto">
                <div class="contact">
                    <form id="addExerciseToWorkout" action="" method="post" role="form">
                        <div class="container">
                            <div class="container">
                                <div class="collection_text">Add exercise</div>
                            </div>
                            <div class="container bg-light2 flex-wrapper">
                                <div class="container" >

                                    <div class="form-group" >
                                        <p style="text-align: center;color: black">Exercise name:</p>
                                        <input style=" padding: 10px; margin: 0px auto; width: 400px;" id="naslov" type="text" class="form-control" name="naslov" required>
                                    </div>
                                    <div class="form-group">
                                        <p style="text-align: center;color: black">Main body part</p>
                                        <input style=" padding: 10px; margin: 0px auto; width: 400px;" id="bodyPart" type="text" class="form-control" name="bodyPart" required>
                                    </div>
                                    <div class="form-group" style="text-align:center">
                                        <button style="align-items: center"class="btn btn-primary" id="uredi">Add exercise</button>
                                        <button onclick="window.location='programsList'" type="button" id="izbrisi" class="btn btn-light">Cancel</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <table class="table table-striped">
                    <!--Table head-->
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Exerise name</th>
                        <th>Main body part</th>
                    </tr>
                    </thead>
                    <!--Table head-->
                    <!--Table body-->
                    <tbody>
                    {{#each exercise as | exercise |}}
                        <tr >
                            <td>{{@index}}</td>
                            <td id="uporabnik1">{{naslov}}</td>
                            <td >{{mainBodyPart}}</td>
                        </tr>
                    {{/each}}


                    </tbody>
                    <!--Table body-->
                </table>
            </div><!--- END COL -->
        </div><!--- END ROW -->
    </div><!--- END CONTAINER -->
</div>