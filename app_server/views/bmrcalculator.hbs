
<div class="main">
    <div class="container">
        <div class="collection_text">Calculate your BMR</div>
    </div>
    <form>
        <div class="form-group">
            <label>AGE</label>
            <input type="text" name="age" class="form-control" placeholder="0">
        </div>
        <p></p>
        <label name = "male">Male</label>
        <input type = "radio"  id = "gender" name="gender" value = "male"/>
        <label name = "female">Female </label>
        <input type = "radio"  id = "gender" name="gender" value = "female"/>
        <p></p>
        <div class="form-group">
            <label>HEIGHT</label>
            <input type="text" name="height" class="form-control" placeholder="0">
        </div>
        <div class="form-group">
            <label>WEIGHT</label>
            <input type="text" name="weight" class="form-control" placeholder="0">
        </div>
        <button type="submit" style="align-items: center"class="submit btn btn-primary" id="uredi">CALCULATE</button>
    </form>
    <h3 class="answer"></h3>
</div>
<script>
    $('.submit').click(function(e) {
        e.preventDefault();
        var height, weight = 0;
        var age = parseFloat($('input[name="age"]').val());
        var weight = parseFloat($('input[name="weight"]').val());
        var height = parseFloat($('input[name="height"]').val());
        var gender = $("input[name='gender']:checked").val();

        var BMRCalculation = 0;
        if (gender == "male"){
            BMRCalculation = 10*weight + 6.25*height - 5*age + 5;
        }
        if(gender== "female"){
            BMRCalculation = 10*weight + 6.25*height -5*age -161;
        }
        $('.answer').html('Your BMR is: ' + BMRCalculation );
    });

</script>
