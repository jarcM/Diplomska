<div class="container">
    <div class="container mt-4">

        <div class="card mb-4">
            <div class="card-body">
                <!-- Grid row -->
                <div class="row">
                    <!-- Grid column -->
                    <div class="col-md-12">
                        <h2 class="pt-3 pb-4 text-center font-bold font-up deep-purple-text">{{program.naslov}}</h2>

                    </div>
                    <!-- Grid column -->
                </div>
                <!-- Grid row -->
                <!--Table-->
                <table class="table table-striped">
                    <!--Table head-->
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Exercise</th>
                        <th>Set 1</th>
                        <th>Set 2</th>
                        <th>Set 3</th>
                        <th>Set 4</th>
                        <th>Set 5</th>
                    </tr>
                    </thead>
                    <!--Table head-->
                    <!--Table body-->
                    <tbody>
                    {{#each program.vaje as |vaje|}}

                        <tr>
                            <td>{{@index}}</td>
                            <td>{{vaje.naslov}}</td>
                            <td>{{vaje.repsWeight.[0].reps1}}</td>
                            <td>{{vaje.repsWeight.[0].reps2}}</td>
                            <td>{{vaje.repsWeight.[0].reps3}}</td>
                            <td>{{vaje.repsWeight.[0].reps4}}</td>
                            <td>{{vaje.repsWeight.[0].reps5}}</td>
                        </tr>
                        <tr>
                            <td></td>
                            <td>{{counter}}</td>
                            <td>{{vaje.repsWeight.[0].weight1}} kg</td>
                            <td>{{vaje.repsWeight.[0].weight2}} kg</td>
                            <td>{{vaje.repsWeight.[0].weight3}} kg</td>
                            <td>{{vaje.repsWeight.[0].weight4}} kg</td>
                            <td>{{vaje.repsWeight.[0].weight5}} kg</td>
                        </tr>
                    {{/each}}
                    </tbody>
                    <!--Table body-->
                </table>
                <!--Table-->
            </div>
        </div>

    </div>


