<div class="container">
    <h1>{{dogodek.ime_dogodka}}</h1>
    <div class="container">
        <div class="collection_text">Podrobnosti izbranega oglasa</div>
    </div>
    <table class="table table-hover table-bordered table-striped">
        <button   class="btn btn-primary btn-lg active" onclick="window.location = '/profil/{{dogodek.kreatorID}}'">
            Preglej profil
        </button>
        <tr onclick="window.location = '/profil/{{dogodek.kreatorID}}'">
            <td>Naslov oglasa</td>
            <td>{{dogodek.naslovOglasa}}</td>
        </tr>
        <tr>
            <td>Kontakt</td>
            <td>{{dogodek.kontakt}}</td>
        </tr>
        <tr>
            <td>Čas dogodka</td>
            <td>{{datumHome dogodek.datum}}</td>
        </tr>
        <tr>
            <td>Trajanje(v minutah)</td>
            <td>{{dogodek.trajanje}}</td>
        </tr>
        <tr>
            <td>Opis oglasa</td>
            <td>{{dogodek.opisZahtev}}</td>
        </tr>

    </table>
    <form method="POST" action="/uporabniki/priljubljeni/{{dogodek._id}}">
        <div class="container">
            <div class="form-group">
                <button type="submit" id="uredi" class="btn btn-primary">DodajMedPriljubljene</button>
            </div>
        </div>
    </form>
    <div class="row">

        {{#if dogodek.jeRezerviran}}
            <div class="form-group">
                <button value="Rezervirano" id="alreadyRezervirano" type="submit" class="btn btn-primary" disabled>Že rezervirano</button>
            </div>
        {{else}}
            <div class="form-group">
                <button id="rezerviraj" type="submit" onclick="doSomething()" class="btn btn-primary">Rezerviraj</button>
            </div>
        {{/if}}
    </div>
    <div id="id_confrmdiv" style="display: none">
        <form method="get" action="/rezervirajDogodek/{{dogodek._id}}">
            <button id="id_truebtn">Da</button>
            <button id="id_falsebtn">Ne</button>
        </form>
    </div>
    <div>
        <div id="fb-root"></div>
        <script async defer crossorigin="anonymous" src="https://connect.facebook.net/sl_SI/sdk.js#xfbml=1&version=v10.0" nonce="D5irB6KQ"></script>
        <!-- Your share button code -->
        <div class="fb-share-button" data-href="https://dogwalkers12.herokuapp.com/eventDetails/{{dogodek._id}}" data-layout="button" data-size="small"><a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fdevelopers.facebook.com%2Fdocs%2Fplugins%2F&amp;src=sdkpreparse" class="fb-xfbml-parse-ignore">Deli z drugimi</a></div>
    </div>
