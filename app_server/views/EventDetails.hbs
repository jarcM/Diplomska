    <script>
        function doSomething(){
            document.getElementById('id_confrmdiv').style.display="block"; //this is the replace of this line

            document.getElementById('id_truebtn').onclick = function(){
                //do your delete operation
                alert('Rezervirano');
            };

            document.getElementById('id_falsebtn').onclick = function(){
                alert('Ne rezerviraj')
                window.location.href = '/eventDetails/{{dogodek._id}}'
                return false;
            };
        }
    </script>

</div>

<div class="container">
    <div class="row">
        <div class="col-12" style="height: 500px">
            <div class="iframe-rwd" style="height: 450px">
                <iframe src="https://maps.google.com/maps?q={{dogodek.koordinate.[0]}},{{dogodek.koordinate.[1]}}&z=15&output=embed" width="100%" height="100%" frameborder="0" style="border:0"></iframe>

            </div>

        </div>
    </div>
</div>
