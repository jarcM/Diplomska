<div class="about_main layout_padding">
    <div class="collection_section">
        <div class="container">
            <div class="collection_text">Profil</div>
        </div>
    </div>
    <div class="container bg-light2 flex-wrapper">
        <div class="row bg-light">

            <div class="col bg-light2">

            <table class="table table-striped" style="width: 50%;margin-left: 40%;margin-right: 25%; background-color: #a5c9a5; cursor: pointer">
            <tr>
                <th style="color: white">Priljubljeni oglasi</th>
            </tr>
            {{#each uporabnik.priljubljeni as |priljubljeni|}}
                <tr>
                    <td onclick="window.location = '/eventDetails/{{priljubljeni.priljubljeni}}'" style="text-align: center">{{priljubljeni.ime}}</td>
                </tr>
            {{/each}}
        </table>
                </div>

            <div class="col">
                <div class="row mb-5">
                    <div style="text-align: center">
                        <h2>Povpreƒçna ocena profila:</h2>
                        <div>{{{zvezdice uporabnik.ocena}}}</div>
                    </div>
                </div>
                <div class="row mb-5">
                    <table class="table table-hover table-bordered table-dark" style="width: 50%; margin-left: auto;margin-right: auto">
                        <tr>
                            <td>Uporabnisko ime</td>
                            <td>{{uporabnik.username}}</td>
                        </tr>
                        <tr>
                            <td>Email</td>
                            <td>{{uporabnik.email}}</td>
                        </tr>
                        <tr>
                            <td>Vloga</td>
                            <td>{{uporabnik.vloga}}</td>
                        </tr>
                        <tr>
                            <td>Rank</td>
                            <td style="text-align: center"><img src="{{isValid uporabnik.skupnaOcena}}" alt="" style="height:100px; width: 100px"></td>
                        </tr>
                    </table>
                </div>


                <div class="row">
                    <div class="col"></div>
                </div>


            </div>

            <div class="column">

            <table class="table table-striped" style="width: 50%;margin-left: 10%;margin-right: 40%; background-color: #a5c9a5">
            <tr style="color: white">
                <th>Komentar</th>
                <th>Ocena</th>
            </tr>
            {{#each uporabnik.komentarji as |komentar|}}
                <tr>
                    <td>{{komentar.vsebina}}</td>
                    <td>{{komentar.ocena}}</td>
                </tr>
            {{/each}}
        </table>
            </div>
        </div>
    </div>
</div>

